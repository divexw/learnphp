<!DOCTYPE html><html lang="en"><head> <meta charset="UTF-8"> <title>cookie</title></head><body> <form action="register.php" method="post">  <table>   <tr>    <td>用户：</td>    <td><input type="text" name="user"></td>   </tr>   <tr>    <td>密码：</td>    <td><input type="password" name="password"></td>   </tr>   <tr>    <td>保存期限：</td>    <td>     <select name="time">      <option value="0">no</option>      <option value="1">1</option>      <option value="2" selected>2</option>      <option value="3">3</option>      <option value="4">4</option>     </select>    </td>   </tr>   <tr>    <td><input type="submit" value="register"></td>    <td><input type="reset"></td>   </tr>   <tr></tr>  </table> </form></body></html>
<?php  $username=$_POST['user']; $time=$_POST['time']; if (!$_POST['user']) {  echo "<a href='./index.html'>go back</a>"; } else {  switch ($time) {   case 0:    $time=time();    break;   case 1:    $time=time()+60*10;    break;   case 2:    $time=time()+100*100;   default:    $time=time()+200*100;    break;  }  setcookie('username',"$username",$time); } ?> <!DOCTYPE html> <html lang="en"> <head>  <meta charset="UTF-8">  <title>cookie</title> </head> <body>  <?php    echo "your name is".$_COOKIE['username']."<p>" ;   echo "cookie 有效期：";   switch ($time) {   case 0:    echo "no";    break;   case 1:    echo "60";    break;   case 2:    echo time()+100;   default:    echo time()+200;    break;  }  ?> </body> </html>
